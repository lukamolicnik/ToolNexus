<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">
            @Message
        </MudText>
        @if (!string.IsNullOrEmpty(SecondaryMessage))
        {
            <MudText Typo="Typo.body2" Class="mt-2" Color="Color.Error">
                @SecondaryMessage
            </MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Prekliči</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">
            Izbriši
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string Message { get; set; } = "Ali ste prepričani, da želite izbrisati ta element?";
    [Parameter] public string SecondaryMessage { get; set; } = "Ta operacija je nepovrativa.";
    [Parameter] public EventCallback<bool> OnResult { get; set; }
    
    void Submit() => OnResult.InvokeAsync(true);
    void Cancel() => OnResult.InvokeAsync(false);
}