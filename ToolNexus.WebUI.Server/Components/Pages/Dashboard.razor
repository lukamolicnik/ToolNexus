                                    <MudIcon Icon="Icons.Material.Filled.Business" Color="Color.Primary" Size="Size.Large" />
                                    <MudText Typo="Typo.h6" Align="Align.Center">Dobavitelji</MudText>
                                    <MudText Typo="Typo.body2" Align="Align.Center">
