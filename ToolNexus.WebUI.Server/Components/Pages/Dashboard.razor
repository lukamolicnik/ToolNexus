                                </MudStack>
                            </MudCardContent>
                            <MudCardActions Class="justify-center">
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/suppliers">
                                    Odpri
                                </MudButton>
                            </MudCardActions>
