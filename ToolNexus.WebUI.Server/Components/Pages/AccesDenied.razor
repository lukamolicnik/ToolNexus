@page "/access-denied"
@inject NavigationManager NavigationManager

<PageTitle>Dostop zavrnjen - ToolNexus</PageTitle>

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="pa-4">
    <MudStack Spacing="4" AlignItems="AlignItems.Center" Justify="Justify.Center" Style="min-height: calc(100vh - 200px);">
        <MudPaper Elevation="3" Class="pa-8 text-center" Style="width: 100%;">
            <MudStack Spacing="4" AlignItems="AlignItems.Center">
                <MudIcon Icon="@Icons.Material.Filled.Block" 
                         Style="font-size: 100px;" 
                         Color="Color.Error" />
                
                <MudText Typo="Typo.h1" Color="Color.Error">
                    403
                </MudText>
                
                <MudText Typo="Typo.h4">
                    Dostop zavrnjen
                </MudText>
                
                <MudText Typo="Typo.body1" Color="Color.Default" Class="mb-4">
                    Nimate dovoljenja za dostop do tega vira.
                </MudText>
                
                <MudDivider Style="width: 100%;" />
                
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          Size="Size.Large"
                          StartIcon="@Icons.Material.Filled.Home"
                          OnClick="NavigateHome">
                    Nazaj na domaƒço stran
                </MudButton>
            </MudStack>
        </MudPaper>
    </MudStack>
</MudContainer>

@code {
    private void NavigateHome()
    {
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}