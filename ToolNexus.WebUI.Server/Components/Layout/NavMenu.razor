@rendermode InteractiveServer

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="Icons.Material.Filled.Dashboard">
        Nadzorna plošča
    </MudNavLink>

        @* Delavec funkcionalnosti *@
        <AuthorizeView Roles="ADMIN,SUPERVISOR,WORKER" Context="workerContext">

            <MudNavGroup Title="Orodja" Icon="Icons.Material.Filled.Build" Expanded="false">
                <MudNavLink Href="/tools" Icon="Icons.Material.Filled.List">
                    Seznam orodij
                </MudNavLink>
                <AuthorizeView Roles="ADMIN,SUPERVISOR" Context="categoriesContext">
                    <MudNavLink Href="/categories" Icon="Icons.Material.Filled.Category">
                        Kategorije
                    </MudNavLink>
                </AuthorizeView>
            </MudNavGroup>
        </AuthorizeView>

        @* Nadzornik proizvodnje funkcionalnosti *@
        <AuthorizeView Roles="ADMIN,SUPERVISOR">
            <MudDivider Class="my-2" />
            <MudNavGroup Title="Upravljanje" Icon="Icons.Material.Filled.ManageAccounts" Expanded="false">
                <MudNavLink Href="/delivery-notes" Icon="Icons.Material.Filled.Receipt">
                    Vnos dobavnic
                </MudNavLink>
                <MudNavLink Href="/suppliers" Icon="Icons.Material.Filled.LocalShipping">
                    Dobavitelji
                </MudNavLink>
                <MudNavLink Href="/stock-adjustments" Icon="Icons.Material.Filled.SwapVert">
                    Spremembe zaloge
                </MudNavLink>
            </MudNavGroup>

            <MudDivider Class="my-2" />
            <MudNavGroup Title="Poročila" Icon="Icons.Material.Filled.Assessment" Expanded="false">
                <MudNavLink Href="/reports/monthly-loss" Icon="Icons.Material.Filled.Report">
                    Mesečno poročilo izgub
                </MudNavLink>
                <MudNavLink Href="/reports/loss-cost-by-category" Icon="Icons.Material.Filled.PieChart">
                    Stroški izgub po kategorijah
                </MudNavLink>
            </MudNavGroup>
        </AuthorizeView>

        @* Administrator funkcionalnosti *@

        <AuthorizeView Roles="ADMIN">
            <MudDivider Class="my-2" />
            <MudNavGroup Title="Administracija" Icon="Icons.Material.Filled.AdminPanelSettings" Expanded="false">
                <MudNavLink Href="/users" Icon="Icons.Material.Filled.People">
                    Uporabniki
                </MudNavLink>
                <MudNavLink Href="/audit-trail" Icon="Icons.Material.Filled.History">
                    Revizijska sled
                </MudNavLink>
            </MudNavGroup>
        </AuthorizeView>
</MudNavMenu>
